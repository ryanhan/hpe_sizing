<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient android:angle="270" android:endColor="@color/dark_blue" android:startColor="@color/dark_blue" />
            <stroke android:width="0.5dp" android:color="@color/dark_blue" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <gradient android:angle="270" android:endColor="@color/dark_blue" android:startColor="@color/dark_blue" />
            <stroke android:width="0.5dp" android:color="@color/dark_blue" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <gradient android:angle="270" android:endColor="@color/light_blue" android:startColor="@color/light_blue" />
            <stroke android:width="0.5dp" android:color="@color/light_blue" />
        </shape>
    </item>

</selector>